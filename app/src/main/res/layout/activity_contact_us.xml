<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-30dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>

        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-80dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_margin="22dp"
            android:translationZ="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back_min" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="verdana"
            android:gravity="center"
            android:text="Contact Us"
            android:textColor="@color/cardview_dark_background"
            android:textSize="30dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/layout_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/contactImg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.137"
                    app:srcCompat="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/conHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactImg"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/syne"
                    android:gravity="center"
                    android:text="We'd love to hear from you"
                    android:textColor="#171717"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contactHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactImg"
                    android:layout_marginTop="10dp"
                    android:autoLink="email"
                    android:fontFamily="@font/syne"
                    android:gravity="center"
                    android:text="contact@ansopedia.com"
                    android:textColor="#171717"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/conDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/conHeading"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Whether you have a question, suggestion, or need any solution, our team is ready to help you."
                    android:textColor="#3F3F3F"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvEditText"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_below="@+id/conDesc"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/textbox_corner_radius"
                    android:drawablePadding="20dp"
                    android:fontFamily="verdana"
                    android:hint="Write a message..."
                    android:padding="15dp"
                    android:textColorHint="@color/lightWhite"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    tools:layout_editor_absoluteX="2dp" />

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_address"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:layout_marginVertical="20dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/syne_bold"
                android:padding="5dp"
                android:text="Send Message"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>