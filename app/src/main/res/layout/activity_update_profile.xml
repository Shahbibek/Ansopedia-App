<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity">
    <RelativeLayout
        android:id="@+id/svMain"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_margin="22dp"
            android:translationZ="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back_min" />

        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-30dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>

        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-80dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="verdana"
            android:gravity="center"
            android:text="My Profile"
            android:textColor="@color/cardview_dark_background"
            android:textSize="30dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/editAble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerTitle"
            android:layout_marginStart="15dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/layout_border">


            <TextView
                android:id="@+id/addHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="verdana"
                android:text="Edit Profile"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgChangeLayout"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/editText_bg"
                android:drawablePadding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="verdana"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textSize="18dp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="2dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:background="@color/editText_bg"
                android:drawablePadding="20dp"
                android:fontFamily="verdana"
                android:hint="+91 xxxxxxxxxx"
                android:inputType="phone"
                android:padding="15dp"
                android:textSize="18dp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="2dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPhoneNo"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="40dp"
                android:background="@color/editText_bg"
                android:drawablePadding="20dp"
                android:fontFamily="verdana"
                android:clickable="true"
                android:focusable="true"
                android:hint="Designation"
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="@color/lightWhite"
                android:textSize="18dp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="2dp" />

            <LinearLayout
                android:id="@+id/imgChangeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/addHeading"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivChangeImg"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/profile_pic_circle"
                    app:shapeAppearanceOverlay="@style/roundimageview" />

                <Button
                    android:id="@+id/ivChangeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/syne_bold"
                    android:padding="5dp"
                    android:text="Change Photo"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editAble"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="35dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/syne_bold"
                android:paddingVertical="5dp"
                android:text="Update"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>