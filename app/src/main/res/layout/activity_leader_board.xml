<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoardActivity">

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-30dp"
        android:background="@drawable/ovalshape"
        android:rotation="50"
        android:text="">

    </androidx.constraintlayout.utils.widget.MotionLabel>

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-80dp"
        android:background="@drawable/ovalshape"
        android:rotation="50"
        android:text="">

    </androidx.constraintlayout.utils.widget.MotionLabel>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:paddingBottom="50dp"
        android:background="#DCDCDC">

        <RelativeLayout
            android:id="@+id/rlTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_layout">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_back"
                android:translationZ="90dp" />

            <TextView
                android:id="@+id/tvLeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Leaderboard"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlTopic2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTopic"
            android:layout_marginTop="-45dp"
            android:background="@drawable/leaderboard_oval"
            android:translationZ="-90dp">


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/topLeads"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/rlTopic2"
            android:layout_marginVertical="35dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/userSecond"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="-25dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSecondRank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserImage_1"
                    android:fontFamily="@font/syne_bold"
                    android:text="2nd"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/UserImage_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/tvSecondRankName"
                    android:src="@drawable/shikat"
                    app:shapeAppearanceOverlay="@style/rankimageview"
                    app:strokeColor="@color/contact_shape"
                    app:strokeWidth="3px" />

                <TextView
                    android:id="@+id/tvSecondRRankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserImage_1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Sanjay"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSecondRankScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userFname_2"
                    android:fontFamily="@font/poppins_regular"
                    android:text="893"
                    android:textAlignment="center"
                    android:textColor="@color/profile_Rank"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/userFirst"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:translationZ="90dp">

                <TextView
                    android:id="@+id/tvFirstRank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserImage_1"
                    android:fontFamily="@font/syne_bold"
                    android:text="1st"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/UserImage_1"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_below="@+id/tvFirstRank"
                    android:src="@drawable/shikat"
                    app:shapeAppearanceOverlay="@style/rank1imageview"
                    app:strokeColor="@color/contact_shape"
                    app:strokeWidth="3px" />

                <TextView
                    android:id="@+id/tvFirstRankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserImage_1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Shikat"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFirstRankScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userFname_1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="921"
                    android:textAlignment="center"
                    android:textColor="@color/profile_Rank"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/userThird"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-25dp"
                android:layout_marginTop="20dp"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvThirdRank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserImage_3"
                    android:fontFamily="@font/syne_bold"
                    android:text="3rd"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/UserImage_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/Rank_3"
                    android:src="@drawable/shikat"
                    app:shapeAppearanceOverlay="@style/rankimageview"
                    app:strokeColor="@color/contact_shape"
                    app:strokeWidth="3px" />

                <TextView
                    android:id="@+id/tvThirdRankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/UserImage_3"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Bibek"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvThirdRankScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userFname_3"
                    android:fontFamily="@font/poppins_regular"
                    android:text="865"
                    android:textAlignment="center"
                    android:textColor="@color/profile_Rank"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvFourth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/topLeads"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rank_bg">

            <TextView
                android:id="@+id/tvFourthRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="4."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/changeImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/shikat"
                app:shapeAppearanceOverlay="@style/rank4imageview"
                app:strokeColor="@color/contact_shape"
                app:strokeWidth="2px" />

            <TextView
                android:id="@+id/tvFourthRankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Abhi"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFourthRankScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="end"
                android:text="844"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvFifth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvFourth"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rank_bg">

            <TextView
                android:id="@+id/tvRankFifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="5."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/changeImgFifth"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/shikat"
                app:shapeAppearanceOverlay="@style/rank4imageview"
                app:strokeColor="@color/contact_shape"
                app:strokeWidth="2px" />

            <TextView
                android:id="@+id/tvFifthRankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Afroz"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFifthRankScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="end"
                android:text="844"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvSixth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvFifth"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rank_bg">

            <TextView
                android:id="@+id/tvRankFourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="6."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/changeImgSixth"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/shikat"
                app:shapeAppearanceOverlay="@style/rank4imageview"
                app:strokeColor="@color/contact_shape"
                app:strokeWidth="2px" />

            <TextView
                android:id="@+id/tvSixthRankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Lal Mohan"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvSixthRankScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="end"
                android:text="844"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvSeventh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvSixth"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rank_bg">

            <TextView
                android:id="@+id/tvRankSeventh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="7."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/changeImgSeventh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/shikat"
                app:shapeAppearanceOverlay="@style/rank4imageview"
                app:strokeColor="@color/contact_shape"
                app:strokeWidth="2px" />

            <TextView
                android:id="@+id/tvSeventhRankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Mahmud"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvSeventhRankScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="end"
                android:text="844"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_nav"
        app:itemIconTint="@color/white"
        app:itemTextColor="?attr/colorOnPrimary"
        app:menu="@menu/bottom_nav" />
</RelativeLayout>