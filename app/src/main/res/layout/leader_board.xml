<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:id="@+id/tvSixth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rank_bg">

        <TextView
            android:id="@+id/tvRankFourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="6."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/changeImgSixth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/shikat"
            app:shapeAppearanceOverlay="@style/rank4imageview"
            app:strokeColor="@color/contact_shape"
            app:strokeWidth="2px" />

        <TextView
            android:id="@+id/tvSixthRankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Mohan"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSixthRankScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="end"
            android:text="844"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>