<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tvSixth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rank_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/tvRankCount"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="1."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivRankerImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/ic_home"
                app:shapeAppearanceOverlay="@style/rank4imageview"
                app:strokeColor="@color/contact_shape"
                app:strokeWidth="2px" />

            <TextView
                android:id="@+id/tvRankerName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Bibek"

                android:textColor="@color/black"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/tvRankerScore"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="end"
                android:text="844"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>