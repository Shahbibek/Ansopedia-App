<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/srNoQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. "
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/quiz_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="What is the data type?"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/quiz_questions"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. option 1"
                android:paddingLeft="20dp"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp"
                android:background="@color/white"
                android:elevation="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. option 2"
                android:paddingLeft="20dp"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp"
                android:background="@color/white"
                android:elevation="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. option 3"
                android:paddingLeft="20dp"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp"
                android:background="@color/white"
                android:elevation="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="d. option 4"
                android:paddingLeft="20dp"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp"
                android:background="@color/white"
                android:elevation="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/corner_radius"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivView"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/ic_eye_icon" />
            <View
                android:layout_margin="5dp"
                android:background="#3B5A80"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/ivDescription"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/ic_discript_icon" />

            <View
                android:layout_margin="5dp"
                android:background="#3B5A80"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/ic_share_min_icon" />

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDescription"
            android:layout_marginHorizontal="25dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="#D0D0D0"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:text="Description:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@+id/tv1"
                    android:id="@+id/tvDescription"
                    android:text="jhbksjkvvNvvn"
                    android:layout_marginStart="20dp"
                    android:layout_marginVertical="10dp"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>